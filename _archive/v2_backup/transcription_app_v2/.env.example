# Transcription App v2 - Environment Configuration
# Copy this file to .env and update with your settings

# Flask Settings
SECRET_KEY=your-secret-key-here-change-in-production
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes

# Whisper Configuration
WHISPER_MODEL=base.en  # Options: tiny.en, base.en, small.en, medium.en, large-v2
WHISPER_DEVICE=auto  # auto, cuda, or cpu
WHISPER_COMPUTE_TYPE=auto  # auto, float16 (GPU), or int8 (CPU)
WHISPER_CPU_THREADS=8  # Number of CPU threads to use
WHISPER_NUM_WORKERS=4  # Parallel processing workers

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=phi3:latest  # Change to your installed model
OLLAMA_TIMEOUT=180  # Timeout in seconds
OLLAMA_TEMPERATURE=0.7  # Response randomness (0.0-1.0)

# Speaker Detection
SPEAKER_GAP_THRESHOLD=2.0  # Seconds of silence to indicate speaker change
SPEAKER_MERGE_THRESHOLD=1.0  # Merge segments within this gap

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=app.log

# Security (for production)
CORS_ENABLED=False
CORS_ORIGINS=*  # Comma-separated list of allowed origins